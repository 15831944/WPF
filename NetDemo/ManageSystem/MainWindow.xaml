<Window x:Class="ManageSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:ManageSystem.ViewModel"
        DataContext="{StaticResource MainWindowViewModelKey}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        Title="MainWindow" Height="600" Width="800">
    <Window.InputBindings>
        <MouseBinding MouseAction="LeftClick" Command="{Binding DragWndCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Path=HomePageCommand}">首页</Button>
            <Button Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Path=StatisticsCommand}">统计</Button>
            <Button Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Path=QueryCommand}">查询</Button>
            <Button Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Path=DeviceManagementCommand}">设备管理</Button>
            <Button Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Path=ElectronicMapCommand}">电子地图</Button>
            <Button Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Path=ResListCommand}">资源列表</Button>
            <Button Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Path=OptionCommand}">选项</Button>
            <Button Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click">test</Button>
        </Grid>
        <ContentControl Grid.Row="1" Content="{Binding _HomePageViewModel}" x:Name="content1" />
        <ContentControl Grid.Row="1" Content="{Binding _StatisticsViewModel}"/>
        <ContentControl Grid.Row="1" Content="{Binding _QueryViewModel}"/>
        <ContentControl Grid.Row="1" Content="{Binding _DeviceManagementViewModel}"/>
        <ContentControl Grid.Row="1" Content="{Binding _ElectronicMapViewModel}"/>
        <ContentControl Grid.Row="1" Content="{Binding _ResListViewModel}"/>
        <ContentControl Grid.Row="1" Content="{Binding _OptionViewModel}"/>
    </Grid>
</Window>

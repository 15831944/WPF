<Window x:Class="ManageSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:ManageSystem.ViewModel"
        DataContext="{StaticResource MainWindowViewModelKey}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="False" ResizeMode="NoResize"
        Title="MainWindow" Height="720" Width="1280">
    <Window.InputBindings>
        <MouseBinding MouseAction="LeftClick" Command="{Binding DragWndCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Window.InputBindings>
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0"  Margin="0,0,0,0" Command="{Binding Path=HomePageCommand}">首页</Button>
            <Button Grid.Row="1"  Command="{Binding Path=StatisticsCommand}">统计</Button>
            <Button Grid.Row="2"  Command="{Binding Path=QueryCommand}">查询</Button>
            <Button Grid.Row="3"  Command="{Binding Path=DeviceManagementCommand}">设备管理</Button>
            <Button Grid.Row="4"  Command="{Binding Path=ElectronicMapCommand}">电子地图</Button>
            <Button Grid.Row="5"  Command="{Binding Path=ResListCommand}">资源列表</Button>
            <Button Grid.Row="6"  Command="{Binding Path=OptionCommand}">选项</Button>
            <Button Grid.Row="7"  Click="Button_Click">test</Button>
        </Grid>
        <ContentControl Grid.Column="1" Content="{Binding _HomePageViewModel}" x:Name="content1" />
        <ContentControl Grid.Column="1" Content="{Binding _StatisticsViewModel}"/>
        <ContentControl Grid.Column="1" Content="{Binding _QueryViewModel}"/>
        <ContentControl Grid.Column="1" Content="{Binding _DeviceManagementViewModel}"/>
        <ContentControl Grid.Column="1" Content="{Binding _ElectronicMapViewModel}"/>
        <ContentControl Grid.Column="1" Content="{Binding _ResListViewModel}"/>
        <ContentControl Grid.Column="1" Content="{Binding _OptionViewModel}"/>
    </Grid>
</Window>
